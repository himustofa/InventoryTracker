<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/space_5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:id="@+id/adjustment_list_item_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Product : "
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:textSize="@dimen/size_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adjustment_product_name"
                android:text="Product Name"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:textSize="@dimen/size_12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Quantity : "
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adjustment_product_quantity"
                android:text="Quantity"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Price : "
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adjustment_amount"
                android:text="Price"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Date : "
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adjustment_date"
                android:text="Date"
                android:textSize="@dimen/size_12sp"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>